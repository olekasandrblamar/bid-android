<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <!-- Base application theme. -->


    <style name="OpenSansTextViewStyle">
<!--        <item name="android:fontFamily">@font/open_sans</item>-->
    </style>

    <style name="LocationButton" parent="AppTheme">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/locate</item>
        <item name="backgroundTint">#CD3C00</item>
        <item name="android:tint">#fff</item>
        <item name="elevation">4dp</item>
        <item name="layout_anchorGravity">bottom|end|right</item>
    </style>

    <style name="BottomSheet" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">16dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">52dp</item>
        <item name="layout_behavior">@string/bottom_sheet_behavior</item>item>
    </style>

    <style name="RouteInfoBackground" parent="AppTheme">
        <item name="android:background">#00703C</item>
    </style>

    <style name="RouteText" parent="AppTheme">
        <item name="android:textColor">@color/colorRouteText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NameText" parent="AppTheme">
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">false</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TimeText" parent="AppTheme">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DirectionText" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TimeDots" parent="AppTheme">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ScheduleCard" parent="CardView">
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="StopIdInput" parent="AppTheme">
        <item name="android:ems">10</item>
        <item name="android:background">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:queryHint">Search for a bus stop&#8230;</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <style name="StatusLine" parent="AppTheme">
        <item name="android:textColor">@color/colorRouteText</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">////Theme.AppCompat.Light.NoActionBar
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppTheme.Map">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
<!--        <item name="fontFamily">@font/poppins_regular</item>-->
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:fontFamily">@font/poppins_regular</item>-->
    </style>

    <style name="AppTheme.Crop" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:listPreferredItemHeightSmall">10dp</item>
        <item name="android:listPreferredItemPaddingLeft">5dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>
    </style>

</resources>