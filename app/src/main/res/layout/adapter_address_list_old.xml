<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/pad_mar_0"
    app:cardElevation="@dimen/pad_mar_0"
    app:contentPadding="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbtn_address_list_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_delete_list_adapter"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorRed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc_address_adapter_list"
            android:layout_width="@dimen/pad_mar_0"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="@dimen/_10sdp"
            android:text="@string/hint_address"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintLeft_toRightOf="@+id/rbtn_address_list_adapter"
            app:layout_constraintRight_toLeftOf="@id/iv_delete_list_adapter"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_address_adapter_list"
            android:layout_width="@dimen/pad_mar_0"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/hint_your_message"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintLeft_toRightOf="@+id/rbtn_address_list_adapter"
            app:layout_constraintRight_toLeftOf="@id/iv_delete_list_adapter"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_address_adapter_list" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>