<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/profile_update_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:text="@string/title_profile_update"
            android:textColor="@color/colorBlueEnd"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_full_name_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/first_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_header_txt" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_first_name_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_first_name"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_update_header_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_last_name_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/last_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_first_name_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_last_name_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_last_name"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_first_name_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_et_dob_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/date_of_birth"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_last_name_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_dob_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:clickable="false"
            android:cursorVisible="false"
            android:enabled="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_dob"
            android:inputType="text"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_last_name_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_et_email_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/email_string_source"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_dob_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="12dp"

            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_email"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_dob_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_et_gender_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/gender"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_email_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_gender_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_chevron_down_black_24dp"
            android:enabled="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="@string/select_your_gender"
            android:inputType="text"
            android:maxLength="20"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_mobile_number_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/mobile_number"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_gender_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_mobile_number_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:clickable="false"
            android:cursorVisible="false"
            android:enabled="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_number"
            android:inputType="text"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorTextGray"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_gender_profile_view" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_address_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/address"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_mobile_number_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_address_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_number"
            android:inputType="textPostalAddress"
            android:maxLines="2"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_mobile_number_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address_postal_code_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/postal_code"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_address_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_address_postal_code_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:clickable="false"
            android:editable="false"
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_postal_code"
            android:inputType="textPostalAddress"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_address_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_city_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/city"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_address_postal_code_profile_view" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_city_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_city"
            android:inputType="text"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_address_postal_code_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_country_profile_view_label"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_unselected_slot"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/country"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/et_first_name_profile_view"
            app:layout_constraintTop_toBottomOf="@+id/et_city_profile_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_country_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_slot_half_radius"
            android:backgroundTint="@color/bg_gray_two"
            android:clickable="true"


            android:enabled="true"

            android:gravity="center_vertical"
            android:hint="@string/enter_your_country"
            android:inputType="text"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/et_full_name_profile_view_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_city_profile_view" />


        <TextView
            android:id="@+id/employment_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:text="@string/employment"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_country_profile_view" />

        <RadioGroup
            android:id="@+id/employment_status_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employment_txt">

            <RadioButton
                android:id="@+id/part_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/part_time"
                android:textSize="@dimen/_10sdp" />

            <RadioButton
                android:id="@+id/full_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/full_time"
                android:textSize="@dimen/_10sdp" />

            <RadioButton
                android:id="@+id/self_employed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:singleLine="true"
                android:text="@string/self_employed"
                android:textSize="@dimen/_10sdp" />

        </RadioGroup>

        <EditText
            android:id="@+id/name_of_employer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_edt"
            android:gravity="top"
            android:hint="Name of Employer"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employment_status_radio_group" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_profile_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/shape_sign_in_corner_radius"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center"
            android:text="@string/text_update"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_of_employer"
            app:layout_constraintWidth_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>